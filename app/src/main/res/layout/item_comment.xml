<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="20dp">

       <com.zxdc.utils.library.view.CircleImageView
           android:id="@+id/img_head"
           android:layout_width="33dp"
           android:layout_height="33dp"
           android:background="@drawable/bg_shape"
           android:layout_marginLeft="15dp"/>

       <TextView
           android:id="@+id/tv_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#ABFFFFFF"
           android:textSize="13sp"
           android:layout_toRightOf="@id/img_head"
           android:layout_marginLeft="12dp"/>

       <TextView
           android:id="@+id/tv_content"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/img_head"
           android:layout_marginLeft="12dp"
           android:layout_below="@id/tv_name"
           android:layout_marginTop="3dp"
           android:layout_marginRight="57dp"/>

       <ImageView
           android:id="@+id/img_praise"
           android:layout_width="18dp"
           android:layout_height="16.5dp"
           android:src="@mipmap/no_praise"
           android:layout_alignParentRight="true"
           android:layout_marginRight="15dp"
           android:layout_marginTop="10dp"/>

       <TextView
           android:id="@+id/tv_num"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:layout_below="@id/img_praise"
           android:textColor="@android:color/white"
           android:textSize="13sp"/>

       <com.zxdc.utils.library.view.MeasureListView
           android:id="@+id/reply_list"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/tv_content"
           android:divider="@null"
           android:layout_toRightOf="@id/img_head"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="12dp">
       </com.zxdc.utils.library.view.MeasureListView>

       <TextView
           android:id="@+id/tv_more"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="查看更多回复"
           android:textSize="13sp"
           android:textColor="@color/color_666666"
           android:layout_below="@id/reply_list"
           android:layout_toRightOf="@id/img_head"
           android:layout_marginLeft="12dp"/>

   </RelativeLayout>

</LinearLayout>
