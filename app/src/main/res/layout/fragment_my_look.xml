<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.zxdc.utils.library.view.MeasureListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:divider="@null">
    </com.zxdc.utils.library.view.MeasureListView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_clear_look"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="一键清除记录"
            android:textColor="@color/color_33333"
            android:textSize="9sp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/remove_search"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_no"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您暂无观看记录"
        android:textSize="14sp"
        android:textColor="@color/color_999999"
        android:drawableTop="@mipmap/no_data"
        android:drawablePadding="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"/>

</RelativeLayout>
