<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="49dp"/>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_main2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/img_main"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/tab_1_false" />

                <TextView
                    android:id="@+id/tv_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:text="推荐"
                    android:textColor="@color/color_333333"
                    android:textSize="11sp" />

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_recommend2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/img_recommend"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/tab_2_false" />

                <TextView
                    android:id="@+id/tv_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:text="发现"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_focus2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/img_focus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/tab_3_false" />

                <TextView
                    android:id="@+id/tv_focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:text="关注"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_user2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/tab_4_false" />

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:text="我的"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

            </com.zxdc.utils.library.view.ClickLinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="49dp"
            android:background="#F5F5F5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent">

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_shape">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tab_1_true"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_recommend"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_shape">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tab_2_true"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_focus"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_shape">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tab_3_true"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </com.zxdc.utils.library.view.ClickLinearLayout>

            <com.zxdc.utils.library.view.ClickLinearLayout
                android:id="@+id/lin_user"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_shape">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tab_4_true"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </com.zxdc.utils.library.view.ClickLinearLayout>

        </LinearLayout>


    </RelativeLayout>

</TabHost>
