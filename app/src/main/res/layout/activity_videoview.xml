<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/hud_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </TableLayout>

        <com.ylean.soft.lfd.utils.ijkplayer.media.IjkVideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_centerInParent="true"/>

        <com.ylean.soft.lfd.view.AutoPollRecyclerView
            android:id="@+id/list_comm"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="95dp"
            android:background="@color/transparent">
        </com.ylean.soft.lfd.view.AutoPollRecyclerView>

        <com.ylean.soft.lfd.view.Love
            android:id="@+id/love"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.ylean.soft.lfd.view.Love>

        <ProgressBar
            android:id="@+id/pb_progressbar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:progressDrawable="@drawable/bg_progressbar"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        
        <ImageView
            android:id="@+id/img_play"
            android:visibility="gone"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@mipmap/play_icon"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.5dp">

            <ImageView
                android:id="@+id/img_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/white_bank"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_blues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="54dp">

                <com.zxdc.utils.library.view.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_shape"/>

                <ImageView
                    android:id="@+id/img_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_focus"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_praise"
                android:layout_width="30dp"
                android:layout_height="27.5dp"
                android:src="@mipmap/no_praise"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:layout_marginTop="8.5dp"/>

            <ImageView
                android:id="@+id/img_coll"
                android:layout_width="30dp"
                android:layout_height="27.5dp"
                android:src="@mipmap/coll_icon"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/tv_focus_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:layout_marginTop="8.5dp"/>

            <ImageView
                android:id="@+id/img_comm"
                android:layout_width="30dp"
                android:layout_height="27.5dp"
                android:src="@mipmap/comm_icon"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/tv_comm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:layout_marginTop="8.5dp"/>

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="30dp"
                android:layout_height="27.5dp"
                android:src="@mipmap/share_icon"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:text="分享"
                android:layout_marginTop="8.5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剧情：走进非洲人民的生活"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/rel_progress"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_alignParentRight="true"/>

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:thumb="@drawable/seekbar_share"
                android:layout_toLeftOf="@id/tv_time"
                android:layout_marginRight="3dp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_screen"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/main_search_bg">

            <RelativeLayout
                android:id="@+id/rel_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_screen_yes"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15.6dp"/>

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="13.5dp"
                android:background="@color/color_c8c8c8"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15.6dp"/>

            <EditText
                android:id="@+id/et_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="发个弹幕冒个泡～"
                android:textColor="@color/color_666666"
                android:textSize="13sp"
                android:imeOptions="actionSend"
                android:singleLine="true"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_select_blues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/select_blues"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_menu"
        android:layout_gravity="right"
        android:layout_width="223dp"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/id_left_menu"
            android:name="com.ylean.soft.lfd.fragment.main.SelectBluesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
