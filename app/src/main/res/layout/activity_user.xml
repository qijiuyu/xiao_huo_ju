<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <com.ylean.soft.lfd.view.scrollview.XScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@mipmap/bg_user">

                <ImageView
                    android:id="@+id/img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/setting_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="60dp"/>

                <ImageView
                    android:id="@+id/img_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/news_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"/>

                <com.zxdc.utils.library.view.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    android:background="@drawable/bg_shape"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2022"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/tv_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3324"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginLeft="36dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <com.zxdc.utils.library.view.ClickTextView
                    android:id="@+id/tv_edit"
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_user_edit"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="84dp"
                    android:text="编辑个人资料"
                    android:textSize="13sp"
                    android:textColor="@color/color_FF6732"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="13sp"
                    android:layout_below="@id/img_head"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:textColor="@android:color/white"
                    android:layout_below="@id/tv_id"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是一个神秘的人"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_remark"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="38dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_user_sex"
                        android:textSize="12sp"
                        android:textColor="@color/color_666666"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="38dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_user_sex"
                        android:textSize="12sp"
                        android:textColor="@color/color_666666"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/tv_xz"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_user_sex"
                        android:textSize="12sp"
                        android:textColor="@color/color_666666"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/tv_works"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="TA的作品"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/color_D8D8D8"
                    android:layout_toRightOf="@id/tv_works"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:id="@+id/tv_my_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/view1"
                    android:textStyle="bold"
                    android:text="我的关注"
                    android:textSize="16sp"
                    android:textColor="@color/color_666666"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/color_D8D8D8"
                    android:layout_toRightOf="@id/tv_my_focus"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:id="@+id/tv_my_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/view2"
                    android:textStyle="bold"
                    android:text="观看记录"
                    android:textSize="16sp"
                    android:textColor="@color/color_666666"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_works"
                    android:layout_marginTop="7dp"
                    android:layout_alignLeft="@id/tv_works"
                    android:layout_alignRight="@id/tv_works"
                    android:gravity="center_horizontal">

                    <View
                        android:id="@+id/view_works"
                        android:layout_width="10dp"
                        android:layout_height="3dp"
                        android:background="@drawable/textview_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_works"
                    android:layout_marginTop="7dp"
                    android:layout_alignLeft="@id/tv_my_focus"
                    android:layout_alignRight="@id/tv_my_focus"
                    android:gravity="center_horizontal">

                    <View
                        android:id="@+id/view_focus"
                        android:visibility="gone"
                        android:layout_width="10dp"
                        android:layout_height="3dp"
                        android:background="@drawable/textview_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_works"
                    android:layout_marginTop="7dp"
                    android:layout_alignLeft="@id/tv_my_look"
                    android:layout_alignRight="@id/tv_my_look"
                    android:gravity="center_horizontal">

                    <View
                        android:id="@+id/view_look"
                        android:visibility="gone"
                        android:layout_width="10dp"
                        android:layout_height="3dp"
                        android:background="@drawable/textview_color"/>

                </LinearLayout>

            </RelativeLayout>

            <com.ylean.soft.lfd.view.ViewPagerForScrollView
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_search"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </com.ylean.soft.lfd.view.scrollview.XScrollView>

</LinearLayout>
